{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5", "DOM"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node10",

    "alwaysStrict": true,
    "jsx": "preserve",

    "types": ["cypress", "node"],
    "typeRoots": ["./../node_modules/@types"],
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["./../**/*.ts", "./../**/*.tsx"]
}
