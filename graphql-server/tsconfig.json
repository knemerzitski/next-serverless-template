{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./../node_modules/@types"],
    "paths": {
      "@/*": ["./../src/*"],
      "@graphql/*": ["./../graphql/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
